<launch>
    <arg name="robot_type" default="$(env ROBOT_TYPE)" doc="Robot type: [a1, aliengo, go1, laikago]"/>
    <arg name="gui" default="true" />
    <arg name="wname" default="empty_world" />

    <param name="legged_robot_description" command="$(find xacro)/xacro $(find fieldai_legged_perceptive_description)/urdf/robot.xacro
        robot_type:=$(arg robot_type) sim:=true
    "/>
    <node name="generate_urdf" pkg="legged_common" type="generate_urdf.sh" output="screen"
          args="$(find fieldai_legged_perceptive_description)/urdf/robot.xacro $(arg robot_type)"/>

    <rosparam file="$(find legged_gazebo)/config/default.yaml" command="load"/>
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find fieldai_legged_perceptive_description)/launch/worlds/$(arg wname).world" />
        <arg name="gui" value="$(arg gui)" />
    </include>
    <!-- push robot_description to factory and spawn robot in gazebo -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" clear_params="true"
          args="-z 0.4 -param legged_robot_description -urdf -model $(arg robot_type)" output="screen"/>

</launch>
